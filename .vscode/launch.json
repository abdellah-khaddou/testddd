    "version": "0.2.0",
    "configurations": [
    
        {
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "type": "node",
            "request": "launch",
            "name": "Launch Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["${workspaceFolder}/src/index.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"

            // "program": "${workspaceFolder}\\src\\index.ts",
            // // "preLaunchTask": "tsc: build - tsconfig.json",
            // "outFiles": [
            //     "${workspaceFolder}/build/**.js"
            // ]
        }
    ]
}